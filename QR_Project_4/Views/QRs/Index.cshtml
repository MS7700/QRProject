@model IEnumerable<QR_Project_4.Models.QR>

@{
    ViewBag.Title = "Index";
}

<div class="title">
    <h2>Quejas y Reclamaciones</h2>
    <div>
        @Html.ActionLink("Agregar", "Create", new { }, new { @class = "btn btn-success btn-xs" })
    </div>
</div>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Cedula)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Departamento.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado_QR.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo_QR.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hora)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comentario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado_QR.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo_QR.Descripcion)
        </td>
        <td>
            <div class="btn-group-vertical">
                @Html.ActionLink("Editar", "Edit", new { id = item.ID_QR }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Detalles", "Details", new { id = item.ID_QR }, new { @class = "btn btn-default btn-xs" })
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ID_QR }, new { @class = "btn btn-danger btn-xs" })
            </div>
            
        </td>
    </tr>
}

</table>
