@model IEnumerable<QR_Project_4.Models.Respuesta_QR>

@{
    ViewBag.Title = "Index";
}

<div class="title">
    <h2>Respuestas de quejas y reclamaciones</h2>
    <div>
        @Html.ActionLink("Agregar", "Create", new { }, new { @class = "btn btn-success btn-xs" })
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Detalle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleado.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QR.Comentario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Detalle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleado.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QR.Comentario)
        </td>
        <td>
            <div class="btn-group-vertical">
                @Html.ActionLink("Edit", "Edit", new { id = item.ID_Respuesta_QR }, new { @class = "btn btn-primary btn-xs" })
                @Html.ActionLink("Details", "Details", new { id = item.ID_Respuesta_QR }, new { @class = "btn btn-default btn-xs" })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID_Respuesta_QR }, new { @class = "btn btn-danger btn-xs" })
            </div>

            
        </td>
    </tr>
}

</table>
